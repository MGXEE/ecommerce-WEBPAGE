<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link
            rel="icon"
            href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>"
        />
        <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css"
            rel="stylesheet"
            integrity="sha384-LN+7fdVzj6u52u30Kp6M/trliBMCMKTyK833zpbD+pXdCLuTusPj697FH4R/5mcr"
            crossorigin="anonymous"
        />
        {# Google font #}
        <link
            href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/7.0.0/css/all.min.css"
            rel="stylesheet"
        />
        {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('css/navbar.css') }}" />
        {% endblock %} {% block javascripts %} {% block importmap %}{{
            importmap("app")
        }}{% endblock %} {% endblock %}
    </head>
    <body>
        {% include "components/navbar.html.twig" %} {% block body %}{% endblock
        %}
        <script>
            document.addEventListener("DOMContentLoaded", () => {
                const filterSelect = document.querySelector(
                    'select[name="filter"]'
                );
                const searchInput = document.querySelector('input[name="q"]');

                if (!filterSelect || !searchInput) {
                    return; // Falls die Elemente auf der Seite nicht existieren
                }

                function toggleSearchInput() {
                    if (filterSelect.value === "product") {
                        searchInput.disabled = false;
                        searchInput.focus();
                    } else {
                        searchInput.disabled = true;
                        searchInput.value = "";
                    }
                }

                filterSelect.addEventListener("change", toggleSearchInput);

                // Beim Laden einmal ausführen, falls schon gesetzt
                toggleSearchInput();
            });
        </script>
        <script
            src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-ndDqU0Gzau9qJ1lfW4pNLlhNTkCfHzAVBReH9diLvGRem5+R9g2FzA8ZGN954O5Q"
            crossorigin="anonymous"
        ></script>
    </body>
    <footer class="fixed-bottom text-center">
        <div
            class="d-flex flex-row mb-3 justify-content-around mt-1"
            style="font-size: 1rem; padding-left: 2rem; padding-right: 2rem"
        >
            <div class="d-flex flex-column">
                <p class="m-0 p-0 small" style="font-weight: bold">
                    CoreStore Q&A
                </p>
                <a
                    href="{{ path('app_q_a') }}"
                    class="text-white text-decoration-none"
                    >frequently asked
                </a>
            </div>
            <div class="d-flex flex-column">
                <p class="m-0 p-0 small" style="font-weight: bold">
                    Learn More
                </p>
                <a
                    href="{{ path('app_static_about') }}"
                    class="text-white text-decoration-none"
                    >AboutUs</a
                >
            </div>
            <div class="d-flex flex-column">
                <p class="m-0 p-0 small" style="font-weight: bold">
                    Contact Us
                </p>
                <a
                    href="mailto:corestore@gmail.com"
                    class="text-white text-decoration-none"
                    >Customer Support</a
                >
            </div>
        </div>
        &copy; {{ "now"|date("Y") }} CoreStore. All rights reserved.
    </footer>
</html>
