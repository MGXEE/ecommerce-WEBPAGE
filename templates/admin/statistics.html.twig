{% extends 'base.html.twig' %}

{% block title %}Sales Statistics
{% endblock %}

{% block body %}
	<div class="container mt-5">
		<h2>Sales Statistics</h2>
		<p>
			<strong>Total Revenue:</strong>
			${{ totalRevenue|number_format(2) }}</p>

		<table class="table table-striped">
			<thead>
				<tr>
					<th>Product</th>
					<th>Category</th>
					<th>Quantity Sold</th>
					<th>Revenue</th>
				</tr>
			</thead>
			<tbody>
				{% for sale in productSales %}
					<tr>
						<td>{{ sale.product }}</td>
						<td>{{ sale.category }}</td>
						<td>{{ sale.quantity }}</td>
						<td>${{ sale.revenue|number_format(2) }}</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
{% endblock %}
