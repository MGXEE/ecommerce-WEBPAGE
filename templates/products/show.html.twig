{% extends 'base.html.twig' %} {% block title %}Products{% endblock %} {% block
body %}
<div class="container" style="padding-bottom: 15rem">
    <h1>Products</h1>

    <div class="col">
        <div class="card h-100 text-center">
            <img src="{{ product.image }}" class="card-img-top" alt="..." />
            <div class="card-body">
                <h5 class="card-title">Product: {{ product.product }}</h5>
                <hr />
                <p class="card-text">Price: {{ product.price }}</p>
                <p class="card-text">Description: {{ product.description }}</p>
                <p class="card-text">Product-Id: {{ product.id }}</p>
                <hr />
                <div
                    class="d-flex align-items-center justify-content-evenly gap-2"
                >
                    <a
                        href="{{ path('app_products_index') }}"
                        class="btn btn-success"
                        >Back To List</a
                    >

                    <a
                        href="{{
                            path('app_products_edit', { id: product.id })
                        }}"
                        class="btn btn-secondary"
                        >Edit Product</a
                    >
                    {{ include("products/_delete_form.html.twig") }}
                </div>
            </div>
        </div>
    </div>
</div>

{% endblock %}
