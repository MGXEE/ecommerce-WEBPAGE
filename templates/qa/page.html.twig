{% extends 'base.html.twig' %} {% block title %}Q&A{% endblock %} {% block
stylesheets %}
<link rel="stylesheet" href="{{ asset('css/qa.css') }}" />
{% endblock %} {% block body %} {% for message in app.flashes('success') %}
<div class="alert alert-success mt-3">{{ message }}</div>
{% endfor %}

<h1>All Questions</h1>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>Question</th>
            <th>Email</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        {% for q in questions %}
        <tr>
            <td>{{ q.id }}</td>
            <td>{{ q.questions }}</td>
            <td>{{ q.email }}</td>
            <td>
                <form
                    action="{{ path('app_q_a_delete', { id: q.id }) }}"
                    method="post"
                    onsubmit="return confirm('Are you sure you want to delete this question?');"
                >
                    <button type="submit" class="btn btn-danger btn-sm">
                        Delete
                    </button>
                </form>
            </td>
        </tr>
        {% else %}
        <tr>
            <td colspan="4">No questions found.</td>
        </tr>
        {% endfor %}
    </tbody>
</table>

{% endblock %}
